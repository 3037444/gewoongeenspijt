{
  "name": "Just Not Sorry -- the Gmail Plug-in",
  "manifest_version": 2,
  "short_name": "JustNotSorry",
  "author": "Steve Brudz, Manish Kakwani, and Tami Reiss of Cyrus Innovation",
  "icons": { "16": "images/JustNotSorry-16.png",
             "48": "images/JustNotSorry-48.png",
            "128": "images/JustNotSorry-128.png" },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": [ "js/content.js" ]
    }
  ],
  "web_accessible_resources": [ "js/*", "html/*", "css/*", "images/*" ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
